<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="javafxmlapplication.DatosPersonalesController" stylesheets="@cssBienvenida.css">
    <top>
        <Text text="Datos Personales" styleClass="titulo" BorderPane.alignment="CENTER"/>
    </top>
    
    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Nuevo Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="nuevoNombreField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Nueva Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="nuevaContraseñaField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Nuevo Correo Electrónico:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="nuevoCorreoField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        </GridPane>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="actualizarDatosButton" text="Actualizar Datos" styleClass="boton-icono"/>
            <Button fx:id="guardarDatosButton" text="Guardar Datos" styleClass="boton-icono"/>
            <Button fx:id="volverButton" text="Volver" styleClass="boton-cerrar-sesion"/>
        </HBox>
    </bottom>
</BorderPane>
