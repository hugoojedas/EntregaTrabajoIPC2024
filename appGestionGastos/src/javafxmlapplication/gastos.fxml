<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane stylesheets="@cssBienvenida.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="javafxmlapplication.GastosController">
    <top>
        <Text styleClass="titulo" text="Gastos" BorderPane.alignment="CENTER" />
    </top>
    
    <center>
        <TableView fx:id="tablaGastos" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="columnaImporte" text="Importe (€)">
                    <cellValueFactory>
                        <PropertyValueFactory property="importe" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="columnaFecha" text="Fecha (DD/MM/AAAA)">
                    <cellValueFactory>
                        <PropertyValueFactory property="fecha" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="columnaNombre" text="Nombre">
                    <cellValueFactory>
                        <PropertyValueFactory property="nombre" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="columnaDescripcion" text="Descripción">
                    <cellValueFactory>
                        <PropertyValueFactory property="descripcion" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="añadirGastoButton" onAction="#handleAñadirGasto" text="Añadir Gasto" />
            <Button fx:id="actualizarGastoButton" onAction="#handleActualizarGasto" text="Actualizar Gasto" />
            <Button fx:id="eliminarGastoButton" onAction="#handleEliminarGasto" text="Eliminar Gasto" />
            <Button fx:id="imprimirEstadoCuentaButton" onAction="#handleImprimirEstadoCuenta" text="Imprimir Estado Cuenta" />
            <Button fx:id="volverButton" onAction="#handleVolver" text="Volver" />
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
        </HBox>
    </bottom>
</BorderPane>
