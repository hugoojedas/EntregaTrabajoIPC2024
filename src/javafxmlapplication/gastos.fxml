<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane stylesheets="@cssBienvenida.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="javafxmlapplication.GastosController">
    <top>
        <Text styleClass="titulo" text="Gastos" BorderPane.alignment="CENTER" />
    </top>
    
    <center>
        <TableView fx:id="gastosTable" prefHeight="200" prefWidth="300" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="importeColumn" prefWidth="75" text="Importe">
                    <cellValueFactory>
                        <PropertyValueFactory property="importe" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="fechaColumn" prefWidth="100" text="Fecha">
                    <cellValueFactory>
                        <PropertyValueFactory property="fecha" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="nombreColumn" prefWidth="100" text="Nombre">
                    <cellValueFactory>
                        <PropertyValueFactory property="nombre" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="descripcionColumn" prefWidth="150" text="Descripción">
                    <cellValueFactory>
                        <PropertyValueFactory property="descripcion" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button fx:id="addGastoButton" onAction="#handleAddGasto" styleClass="boton-icono" text="Añadir Gasto" />
            <Button fx:id="updateGastoButton" onAction="#handleUpdateGasto" styleClass="boton-icono" text="Actualizar Gasto" />
            <Button fx:id="deleteGastoButton" onAction="#handleDeleteGasto" styleClass="boton-icono" text="Eliminar Gasto" />
            <Button fx:id="printReportButton" onAction="#handlePrintReport" styleClass="boton-icono" text="Imprimir Estado Cuenta" />
            <Button fx:id="volverButton" onAction="#handleVolver" styleClass="boton-cerrar-sesion" text="Volver" />
        </HBox>
    </bottom>
</BorderPane>
